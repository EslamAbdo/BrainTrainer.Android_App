<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eslam.braintrainer.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30s"
        android:id="@+id/counter"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:background="#e2f020" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:id="@+id/scoreTxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:textSize="15sp"
        android:background="#fea129" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31+ 34"
        android:id="@+id/ques"
        android:layout_alignBottom="@+id/counter"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#0a0707" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/counter"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/scoreTxt">


        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="80sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button0"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#c4e9a5"
            android:tag="0"
            android:onClick="chooseAnswer"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="80sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#a7efdb"
            android:tag="1"

            android:onClick="chooseAnswer"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="80sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button2"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#f5c9f4"
            android:tag="2"
            android:onClick="chooseAnswer"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="80sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button3"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#f7b4bd"
            android:tag="3"
            android:onClick="chooseAnswer"/>



    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/state"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:padding="2dp"
        android:textColor="#221717"
        android:textSize="33sp" />

    <Button
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:id="@+id/playAgain"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="playAgain" />

</RelativeLayout>
